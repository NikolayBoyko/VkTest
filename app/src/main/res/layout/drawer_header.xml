<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b9999">

    <ImageView
        android:id="@+id/drawer_header_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_header"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/drawer_header_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/drawer_header_textView_secondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingTop="20dp"
        android:textColor="@color/colorPrimaryDark" />


</FrameLayout>